{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-server",
    "rootDir": "./",
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["server/**/*.ts", "interfaces/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules"]
}
